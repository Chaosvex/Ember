namespace ember.messaging.Accountv2;

enum DisconnectReason : ubyte {
	ACCOUNT_SUSPENDED, ACCOUNT_BANNED, PLAYER_KICKED,
	INTERNAL_LINK_LOST
}

enum Status : ubyte {
	UNKNOWN_ERROR, OK, ILLFORMED_MESSAGE, ALREADY_LOGGED_IN, SESSION_NOT_FOUND
}

table Response {
	status:Status;
}

table LookupID {
	account_name:string;
}

table LookupIDResponse {
	status:Status;
	account_id:uint;
}

table RegisterSession {
	account_id:uint;
	key:[ubyte];
}

table SessionLookup {
	account_id:uint;
}

table SessionResponse {
	status:Status;
	account_id:uint;
	key:[ubyte];	
}

table DisconnectID {
	account_id:uint;
	reason:DisconnectReason;
}

table DisconnectSession {
	session_key:[ubyte];
	reason:DisconnectReason;
}

union Message {
	SessionLookup,
	SessionResponse,
}

table Envelope {
	message: Message;
}

root_type Envelope;

rpc_service Accountv2 {
	SessionFetch(SessionLookup):SessionResponse;
}