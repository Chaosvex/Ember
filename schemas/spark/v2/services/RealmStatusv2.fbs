namespace ember.messaging.RealmStatusv2;

table RequestRealmStatus {}

table RealmStatus {
	id:uint;
	name:string;
	ip:string;
	population:float;
	type:uint;
	flags:ubyte;
	category:int;
	region:int;
}

union Message {
	RequestRealmStatus,
	RealmStatus
}

table Envelope {
	message: Message;
}

root_type Envelope;

rpc_service RealmStatusv2 {
	StatusRequest(RequestRealmStatus):RealmStatus;
}