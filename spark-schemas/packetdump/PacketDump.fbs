namespace ember;

enum Direction {
	INBOUND, OUTBOUND
}

table Header {
	version:uint;
	host:string;
	host_desc:string;
	remote_host:string;
}

table Message {
	timestamp:uint;
	direction:Direction;
	opcode:uint;
	size:uint;
	payload:[ubyte];
}